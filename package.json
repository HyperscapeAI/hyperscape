{
  "name": "@hyperscape/hyperscape",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Hyperscape - AI-powered virtual world with RPG elements",
  "keywords": [
    "hyperscape",
    "virtual-worlds",
    "rpg",
    "ai",
    "elizaos",
    "3d",
    "metaverse"
  ],
  "author": "Hyperscape Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run docs:generate && turbo run build",
    "build:shared": "cd packages/shared && bun run build",
    "build:client": "cd packages/client && bun run build",
    "build:server": "cd packages/server && bun run build",
    "build:all": "bun run build",
    "predev": "bun scripts/dev-setup.mjs",
    "dev": "turbo run dev",
    "dev:all": "turbo run dev",
    "dev:shared": "cd packages/shared && bun run dev",
    "dev:client": "cd packages/client && bun run dev",
    "dev:server": "cd packages/server && bun run dev",
    "dev:reset": "bun run clean && rm -rf packages/*/node_modules/.vite && bun run build:shared && turbo run dev",
    "cdn:up": "bun scripts/cdn.mjs",
    "cdn:down": "cd packages/server && docker-compose down cdn",
    "start": "cd packages/server && bun run start",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf test-*.json test-*.png *.log **/*.log test-results packages/docs-site/docs/api",
    "ios": "cd packages/client && bun run ios",
    "ios:dev": "cd packages/client && bun run ios:dev",
    "ios:build": "cd packages/client && bun run ios:build",
    "android": "cd packages/client && bun run android",
    "android:dev": "cd packages/client && bun run android:dev",
    "android:build": "cd packages/client && bun run android:build",
    "cap:sync": "cd packages/client && bun run cap:sync",
    "cap:sync:ios": "cd packages/client && bun run cap:sync:ios",
    "cap:sync:android": "cd packages/client && bun run cap:sync:android",
    "docs:generate": "typedoc",
    "docs:dev": "cd packages/docs-site && bun run start",
    "docs:build": "bun run docs:generate && cd packages/docs-site && bun run build",
    "docs:serve": "cd packages/docs-site && bun run serve",
    "docs:clean": "rm -rf packages/docs-site/docs/api",
    "docs:rebuild": "bun run docs:clean && bun run docs:build"
  },
  "devDependencies": {
    "@docusaurus/core": "^3.9.1",
    "@docusaurus/preset-classic": "^3.9.1",
    "@eslint/js": "^9.0.0",
    "@types/node": "^24.8.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "bun-types": "^1.2.20",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "puppeteer": "^24.22.0",
    "rollup": "^4.52.4",
    "ts-jest": "^29.1.1",
    "turbo": "^2.5.5",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/three": "^0.180.0",
    "typescript": "^5.9.2"
  },
  "packageManager": "bun@1.0.0",
  "dependencies": {
    "@rollup/rollup-darwin-x64": "^4.52.4",
    "@types/pg": "^8.15.5",
    "better-sqlite3": "^12.2.0",
    "canvas": "^3.1.2",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.6",
    "pg": "^8.16.3",
    "playwright": "^1.54.2",
    "pngjs": "^7.0.0",
    "ws": "^8.18.3"
  }
}
