# Hyperscape Environment Variables
# Copy this file to .env and fill in your actual values

# JWT Secret for authentication (generate a secure random string)
JWT_SECRET=

# Mem0 AI Integration (optional - for agent memory)
# Get your API key from https://mem0.ai
MEM0_API_KEY=
MEM0_API_URL=https://api.mem0.ai

# Privy Authentication (optional - for user authentication)
# Get your credentials from https://privy.io
PRIVY_APP_ID=
PRIVY_APP_SECRET=

# CSRF Protection Secret (optional - will use JWT_SECRET if not set)
CSRF_SECRET=

# Cookie Secret (optional - will use JWT_SECRET if not set)
COOKIE_SECRET=

# Server Configuration
HYPERSCAPE_SERVER_URL=http://localhost:5555
HYPERSCAPE_WS_URL=ws://localhost:5555/ws
HYPERSCAPE_ASSETS_URL=https://assets.hyperscape.io

# Database (SQLite by default)
DATABASE_PATH=./hyperscape.db

# Node Environment
NODE_ENV=development

# Agent Token Expiry (seconds, default: 300)
AGENT_TOKEN_EXPIRY=300

# Agent Authentication (default: true)
AGENT_AUTH_ENABLED=true
