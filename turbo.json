{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**"],
      "cache": true
    },
    "physx-js-webidl#build": {
      "dependsOn": [],
      "outputs": [
        "dist/**",
        "PhysX/physx/compiler/emscripten-release/**"
      ],
      "inputs": [
        "PhysX/physx/source/**",
        "PhysX/physx/include/**",
        "make.sh",
        "package.json"
      ],
      "cache": true
    },
    "shared#build": {
      "dependsOn": ["^build", "physx-js-webidl#build"],
      "outputs": ["dist/**", "build/**"],
      "cache": true
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "cache": true,
      "env": ["NODE_ENV"]
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true
    },
    "clean": {
      "cache": false
    }
  }
} 