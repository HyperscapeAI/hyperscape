# Server Configuration
PORT=5555
WORLD=world

# PostgreSQL Database (automatically managed via Docker)
DATABASE_URL=postgresql://hyperscape:hyperscape_dev@localhost:5432/hyperscape
POSTGRES_CONTAINER=hyperscape-postgres
POSTGRES_USER=hyperscape
POSTGRES_PASSWORD=hyperscape_dev
POSTGRES_DB=hyperscape
POSTGRES_PORT=5432
POSTGRES_IMAGE=postgres:16-alpine

# Redis (Required for production multi-instance deployments)
# Used for distributed rate limiting across server instances
# Optional in development (falls back to in-memory rate limiting)
# REDIS_URL=redis://localhost:6379

# CDN URL for static assets
PUBLIC_CDN_URL=http://localhost:8080
PUBLIC_WS_URL=ws://localhost:5555/ws

# Authentication (Optional - Privy)
# PUBLIC_PRIVY_APP_ID=your-privy-app-id
# PRIVY_APP_ID=your-privy-app-id
# PRIVY_APP_SECRET=your-privy-app-secret

# Farcaster Frame v2 (Optional)
# PUBLIC_ENABLE_FARCASTER=false
# PUBLIC_APP_URL=http://localhost:5555

# LiveKit Voice (Optional)
# LIVEKIT_API_KEY=your-livekit-key
# LIVEKIT_API_SECRET=your-livekit-secret
# PUBLIC_LIVEKIT_URL=wss://your-livekit-url

# Development
NODE_ENV=development

WS_PING_INTERVAL_SEC=5
WS_PING_MISS_TOLERANCE=3
WS_PING_GRACE_MS=5000

# Agent Authentication
# AGENT_AUTH_ENABLED=true
# AGENT_TOKEN_EXPIRY=300
# AGENT_REGISTRATION_LIMIT=10
# AGENT_REGISTRATION_WINDOW=900