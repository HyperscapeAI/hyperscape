{
  "name": "@hyperscape/shared",
  "version": "0.13.0",
  "type": "module",
  "main": "build/framework.js",
  "types": "build/framework.d.ts",
  "bin": {
    "hyperscape": "build/cli.js"
  },
  "exports": {
    ".": {
      "types": "./build/framework.d.ts",
      "import": "./build/framework.js",
      "require": "./build/framework.js"
    },
    "./client": {
      "types": "./build/framework.d.ts",
      "import": "./build/framework.client.js",
      "default": "./build/framework.client.js"
    }
  },
  "homepage": "https://github.com/HyperscapeAI/hyperscape#readme",
  "bugs": {
    "url": "https://github.com/HyperscapeAI/hyperscape/issues"
  },
  "keywords": [
    "hyperscape",
    "3d",
    "components",
    "virtual-worlds",
    "metaverse",
    "three.js",
    "webgl",
    "real-time"
  ],
  "scripts": {
    "dev": "bun scripts/dev-final.mjs",
    "dev:legacy": "bun scripts/dev.mjs",
    "dev:old": "bun scripts/build.mjs --dev",
    "prebuild": "bun run docs:extract",
    "build": "bun scripts/build.mjs",
    "build:client": "vite build",
    "build:server": "bun scripts/build.mjs --server-only",
    "start": "bun run build && bun build/index.js start --world ./world",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "test:client": "node test-client.mjs",
    "lint": "eslint src --max-warnings 22100",
    "docs:extract": "echo 'TSDoc extraction happens at root level via TypeDoc'",
    "cap:init": "cap init 'Hyperscape' 'com.hyperscape.app' --web-dir build/public",
    "cap:sync": "cap sync",
    "cap:sync:ios": "cap sync ios",
    "cap:sync:android": "cap sync android",
    "cap:ip": "node scripts/get-local-ip.mjs",
    "config:check": "node scripts/check-config.mjs",
    "config:check:mobile": "node scripts/check-config.mjs --mobile",
    "ios": "bun run build:client && cap sync ios && cap open ios",
    "ios:dev": "cap sync ios && cap open ios",
    "ios:build": "bun run build:client && cap sync ios && cap copy ios",
    "android": "bun run build:client && cap sync android && cap open android",
    "android:dev": "cap sync android && cap open android",
    "android:build": "bun run build:client && cap sync android && cap copy android"
  },
  "files": [
    "build/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@farcaster/miniapp-sdk": "^0.1.9",
    "@fastify/compress": "^8.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/multipart": "^9.0.1",
    "@fastify/static": "^8.0.1",
    "@fastify/websocket": "^11.0.1",
    "@hyperscape/physx-js-webidl": "workspace:*",
    "@pixiv/three-vrm": "^3.3.3",
    "@privy-io/react-auth": "^2.21.4",
    "@privy-io/server-auth": "^1.14.0",
    "@types/styled-components": "^5.1.34",
    "better-sqlite3": "^12.2.0",
    "commander": "^12.1.0",
    "d3": "^7.9.0",
    "dotenv": "^16.4.5",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "eventemitter3": "^5.0.1",
    "fastify": "^5.0.0",
    "find-cache-dir": "^5.0.0",
    "fs-extra": "^11.2.0",
    "hls.js": "^1.6.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "livekit-client": "^2.9.9",
    "livekit-server-sdk": "^2.11.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.469.0",
    "moment": "^2.30.1",
    "msgpackr": "^1.11.0",
    "nanoid": "^5.0.6",
    "postprocessing": "^6.36.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "source-map-support": "^0.5.21",
    "sqlite3": "^5.1.7",
    "styled-components": "^6.1.19",
    "three": "^0.180.0",
    "three-custom-shader-material": "^6.3.7",
    "three-mesh-bvh": "^0.8.3",
    "yoga-layout": "^3.2.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.23.10",
    "@babel/preset-react": "^7.23.10",
    "@capacitor/android": "^7.4.3",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@capacitor/ios": "^7.4.3",
    "@microsoft/api-extractor": "^7.52.10",
    "@playwright/test": "^1.53.1",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.9.3",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/source-map-support": "^0.5.10",
    "@types/webxr": "^0.5.22",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "ajv": "^8.17.1",
    "ajv-draft-04": "^1.0.0",
    "autoprefixer": "^10.4.21",
    "chokidar": "^3.6.0",
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "^0.25.5",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jimp": "^0.22.12",
    "jsdom": "^25.0.1",
    "playwright": "^1.54.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rollup": "^4.46.2",
    "rollup-plugin-dts": "^6.2.1",
    "sharp": "^0.33.5",
    "tailwindcss": "^4.1.14",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vite": "^6.3.5",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7"
  },
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=22.11.0"
  },
  "overrides": {
    "three": "^0.180.0"
  },
  "license": "GPL-3.0-only"
}
